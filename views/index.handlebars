<h1>BURGERS</h1>

<divv class="row">
    <div class="col-4">
        <h2>What burger to eat?</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>{{burger_name}}

                <button data-id={{id}} class="devouredbtn">Devour It</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-4"></div>
    <h2>Already ate these!</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{burger_name}}
        {{/if}}
        {{/each}}
    </ul>   
</div>
</div>

<form  action="/api/burgers" method="POST" class="createForm">
    <div class="formGroup">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="burger_name">
    <button class = "btn btn-primary" type="submit">Add Your Burger</button>
    </div>
</form>