<h1>BURGERS</h1>

<divv class="row">
    <div class="col-4">
        <h2>What burger to eat?</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
                 {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-4"></div>
    <h2>Already ate these!</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
    </ul>   
</div>
</div>

<form class="createForm">
    <div class="formGroup">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <button class = "btn btn-primary" type="submit">Add Your Burger</button>
    </div>
</form>